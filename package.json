{
  "name": "navas-electron-app",
  "version": "1.1.0",
  "description": "Navas Promoções Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:frontend\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "dev:frontend": "cd navas-front && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd navas-front && npm run build",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "desktop",
    "navas",
    "promocoes"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.navas.promocoes",
    "productName": "Navas Promoções",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "navas-front/dist/**/*",
      "node_modules/**/*",
      "navas-caminho-imagens.txt"
    ],
    "extraResources": [
      {
        "from": "navas-front/dist",
        "to": "navas-front/dist"
      }
    ],
    "win": {
      "target": "portable",
      "icon": "assets/navas-logo.jpg",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/navas-logo.jpg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/navas-logo.jpg"
    }
  }
}
